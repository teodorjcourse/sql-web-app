<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Database Manager</display-name>

    <filter>
        <filter-name>request-filter</filter-name>
        <filter-class>com.juja.webapp.teodor.components.filters.RequestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>request-filter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <!--The listeners are called in the order they are specified in web.xml-->
    <!--As we try to retrieve WebApplicationContext at ContextListener so the ContextLoaderListener should be called first-->
    <!--Do all attribute settings in ContextLoaderListener if the listeners order is not determined-->
    <listener>
        <description>Context Loader Listener</description>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <listener>
        <description>Context Listener</description>
        <listener-class>com.juja.webapp.teodor.components.listeneres.ContextListener</listener-class>
    </listener>

    <listener>
        <description>Session Listener</description>
        <listener-class>
            com.juja.webapp.teodor.components.listeneres.SessionListener
        </listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/applicationContext.xml</param-value>
    </context-param>

    <context-param>
        <!--
        just to try !
        contextClass by default is XmlWebApplicationContext
        -->
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.XmlWebApplicationContext</param-value>
    </context-param>


    <welcome-file-list>
        <welcome-file>main.html</welcome-file>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>client-requests</servlet-name>
        <servlet-class>com.juja.webapp.teodor.components.servlets.Main</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>client-requests</servlet-name>
        <url-pattern>/action/*</url-pattern>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>


</web-app>