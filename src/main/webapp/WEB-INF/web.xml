<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Database Manager</display-name>

    <filter>
        <filter-name>request-filter</filter-name>
        <filter-class>com.juja.webapp.teodor.components.filters.RequestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>request-filter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
    
    <listener>
        <listener-class>com.juja.webapp.teodor.components.listeneres.ContextListener</listener-class>
    </listener>

    <context-param>
        <param-name>databaseProperties</param-name>
        <param-value>postgresql.properties</param-value>
    </context-param>

    <listener>
        <description>sessionListener</description>
        <listener-class>
            com.juja.webapp.teodor.components.listeneres.SessionListener
        </listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>main.html</welcome-file>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>client-requests</servlet-name>
        <servlet-class>com.juja.webapp.teodor.components.servlets.Main</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>client-requests</servlet-name>
        <url-pattern>/action/*</url-pattern>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>


</web-app>